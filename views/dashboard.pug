extends layout.pug


block content
    script(src='/stylesheets/image_slider/js/index.js')
    link(rel='stylesheet' href='/stylesheets/image_slider/css/style.css')
    .dashboard(style='padding-top:80px;height:60%;')
        .row
            .col
                script(src='/stylesheets/image_slider/js/index.js')
                link(rel='stylesheet' href='/stylesheets/image_slider/css/style.css')
                .slideshow_image-container(style='min-height:100px; max-height:100px;')
                    .mySlides.fade_img
                        .numbertext 1 / 3
                        img(src='/image/blog_slogan/your_voice3.png' style='width:100%')
                    .mySlides.fade_img
                        .numbertext 2 / 3
                        img(src='/image/blog_slogan/respect.png' style='width:100%')
                    .mySlides.fade_img
                        .numbertext 3 / 3
                        img(src='/image/blog_slogan/voice_matters2.png' style='width:100%')
                    a.prev(onclick='plusSlides(-1)') &#x276E;
                    a.next(onclick='plusSlides(1)') &#x276F;
        .row
            .container
                .row
                    .dashboard-text
                        h1(style='display:inline;')
                            p Welcome! #{user.username} &nbsp
                                a.btn.btn-dark(href='/users/logout') Logout
                .row
                    .events-features
                        ul
                            li.highlighted View your petition articles
                            each article, i in articles.reverse()
                                li
                                    a(href="/petition/articles/" + article._id)
                                        u #{article.title}
                                    .pull-right
                                        img(src='/image/article_icon/support.png' style='width:20px;height:20px;' alt='Support')
                                        i #{article.support} &nbsp
                                        a.btn.btn-danger.delete-article(href='#', data-id=article._id) Delete
                            if (articles.length==0)
                                li Looks like you have't post your petitions. Let us hear your voice!
                        ul
                            li.highlighted View your supported petitions
                            each article, j in supports.reverse()
                                li
                                    a(href="/petition/articles/" + article._id)
                                        u #{article.title}
                            if (supports.length == 0)
                                li Looks like you have't support any petitions.


    style.
        p {
            font-size: xx-large;
            font-family: Helvetica, Arial, sans-serif;
            }
        .container{
            padding-top:120px;
        }
