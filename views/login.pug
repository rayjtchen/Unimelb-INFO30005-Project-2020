extends layout.pug
block content
    //from colorlib.com https://colorlib.com/wp/templates/
    link(rel='stylesheet' href='/stylesheets/timezone_css/style.css')
    .wrapper
        h1 Login
        img(src='/image/login.png' alt='log in' width= '100px' height='100px')
        include login_alert
        form(method = 'POST', action = '/users/login')
            label UM Email:
            input.form-control(name = 'email', type = 'text')
            label Password:
            input.form-control(name = 'password', type = 'password')
            br
            .form-group.text-center
                input.btn.btn-primary(type = 'submit', value = 'Log In')
            .form-group.text-center
                a.btn.btn-primary(href='/users/register') Register


