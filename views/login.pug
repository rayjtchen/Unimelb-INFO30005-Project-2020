extends layout.pug

block content
    h1 Login
    include login_alert
    form(method = 'POST', action = '/users/login')
        label Username:
        input.form-control(name = 'username', type = 'text')
        label Password:
        input.form-control(name = 'password', type = 'text')
    br
    input.btn.btn-primary(type = 'submit', value = 'Submit')