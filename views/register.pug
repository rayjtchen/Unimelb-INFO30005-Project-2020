extends layout.pug
block content
    //from colorlib.com https://colorlib.com/wp/templates/
    link(rel='stylesheet' href='/stylesheets/timezone_css/style.css')
    .wrapper
        h1 Register
        img(src='/image/register.png' alt='Register' width= '100px' height='100px')
        include register_alert
        form(method = 'POST', action = '/users/register')
            label UM Email:
            input.form-control(name = 'email', type = 'text')
            label Username:
            input.form-control(name = 'username', type = 'text')
            label Password:
            input.form-control(name = 'password', type = 'password')
            label Enter the password again:
            input.form-control(name = 'password2', type = 'password')
            br
            .form-group.text-center
                input.btn.btn-primary(type = 'submit', value = 'Submit')