-if(success_register_msg != '')
    .alert.alert-warning.alert-dismissible.fade.show(role='alert' style= 'background-color: #deffcd; border-color: #deffcd')
        .message(style= 'color: #638f4c;' visibility = "hidden") #{success_register_msg}
        button.close(type='button' data-dismiss='alert' aria-label='Close' style="color: #856404;")
            span(aria-hidden='true') &times;

-if(error != '')
    .alert.alert-warning.alert-dismissible.fade.show(role='alert' style= 'background-color: #fff3cd; border-color: #ffeeba')
        .message(style= 'color: #DAA520;' visibility = "hidden") #{error}
        button.close(type='button' data-dismiss='alert' aria-label='Close' style="color: #856404;")
            span(aria-hidden='true') &times;

-if(error_msg != '')
    .alert.alert-warning.alert-dismissible.fade.show(role='alert' style= 'background-color: #ffbdbd; border-color: #ffbdbd')
        .message(style= 'color: #a85e5e;' visibility = "hidden") #{error_msg}
        button.close(type='button' data-dismiss='alert' aria-label='Close' style="color: #856404;")
            span(aria-hidden='true') &times;